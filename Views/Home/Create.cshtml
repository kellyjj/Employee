@model mgrList

@{
    ViewData["Title"] = "EmployeeCreate";
}

<h1>EmployeeCreate</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            @Html.DropDownListFor(modelitem =>modelitem.EMPLOYEEID,Model.myddList,"Select Manager",new { @class = "custom-select" })

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="emp.EMPLOYEEID" class="control-label"></label>
                <input asp-for="emp.EMPLOYEEID" class="form-control" />
                <span asp-validation-for="emp.EMPLOYEEID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="emp.FNAME" class="control-label"></label>
                <input asp-for="emp.FNAME" class="form-control" />
                <span asp-validation-for="emp.FNAME" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="emp.LNAME" class="control-label"></label>
                <input asp-for="emp.LNAME" class="form-control" />
                <span asp-validation-for="emp.LNAME" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="emp.ISMANAGER" /> @Html.DisplayNameFor(model => model.emp.ISMANAGER);
                </label>
            </div>
            <div class="form-group">
    
                <input type="submit" value="Create" class="btn bg-primary" />  
  
            </div> 
            
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

